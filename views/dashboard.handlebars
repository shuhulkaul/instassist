<section class="hero is-fullheight is-info">
        <div class="hero-body">
            <div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <img src={{instagram.data.profile_picture}} alt="Image">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong>{{instagram.data.full_name}}</strong> <small>@{{instagram.data.username}}</small> <small>31m</small>
          <br>
          Media : {{instagram.data.counts.media}}       Following : {{instagram.data.counts.follows}}       Followers : {{instagram.data.counts.followed_by}}  <br>
          Business Profile : {{instagram.data.is_business}}   {{#if instagram.data.website}} Website : {{instagram.data.website}} {{/if}}
          <br>
          <hr>
          bio : {{instagram.data.bio}} 
           </p>
      </div>
    </div>
  </article>
</div>
            </div>
</section>